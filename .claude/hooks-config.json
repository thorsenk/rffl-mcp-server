{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/protect-env-files.sh",
            "description": "Prevent committing .env files"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/validate-python-syntax.sh",
            "description": "Validate Python syntax after file changes"
          },
          {
            "type": "command",
            "command": ".claude/hooks/verify-mcp-import.sh",
            "description": "Verify MCP server can be imported"
          }
        ]
      }
    ]
  }
}
